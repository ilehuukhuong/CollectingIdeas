@model Topic

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Topic</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=Name>Name</label>
            <input asp-for=Name class="form-control" />
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=ClosureDate>Closure Date</label>
            <input asp-for=ClosureDate class="form-control" />
            <span asp-validation-for=ClosureDate class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=FinalClosureDate>Final Closure Date</label>
            <input asp-for=FinalClosureDate class="form-control" />
            <span asp-validation-for=FinalClosureDate class="text-danger"></span>
        </div>
        <div class="button-group">
        <button type="submit" class="btn btn-warning update">Update</button>
            <a class="btn btn-dark text-white" asp-controller="Topic" asp-action="Index"><i class='bx bx-arrow-back'></i></a>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
