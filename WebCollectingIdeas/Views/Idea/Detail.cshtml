@model Idea
<div class="container">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col">
                <h2>Idea Detail</h2>
            </div>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Topic Name
        </dt>
        <dd class="col-sm-10">@ViewBag.TopicName</dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">@ViewBag.CategoryName</dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">@Model.Title</dd>
        @if (Model.Description != null)
        {
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">@Model.Description</dd>
        }
        <dt class="col-sm-2">
            Create Day
        </dt>
        <dd class="col-sm-10">@Model.CreateDatetime</dd>
        @if (Model.Path != null)
        {
            <dt class="col-sm-2">
                File
            </dt>
            <dd class="col-sm-10">
                <a class="col-sm-10" href="~/@Model.Path" download>Download</a>
            </dd>
        }
        <dt class="col-sm-2">
            View
        </dt>
        <dd class="col-sm-10">#</dd>
        <dt class="col-sm-2">
            Like
        </dt>
        <dd class="col-sm-10">#</dd>
        <dt class="col-sm-2">
            Dislike
        </dt>
        <dd class="col-sm-10">#</dd>
    </dl>
    <hr>
    <div>#</div>
    <hr>
    <div>#</div>
    <hr>
    <div>#</div>
    <hr>
    <div><a class="btn btn-light text-white" asp-controller="Idea" asp-action="View" asp-route-id=@Model.TopicId>Back to Topic View</a></div>
</div>
