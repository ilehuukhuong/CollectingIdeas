@model IEnumerable<Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Create new Category</a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Create Day</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreateDatetime</td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id>
                        <i class="bi bi-pencil btn btn-primary"></i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id>
                        <i class="bi bi-trash3 btn btn-primary"></i></a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>