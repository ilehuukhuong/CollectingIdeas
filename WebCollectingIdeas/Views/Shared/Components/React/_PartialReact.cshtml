@model View
@if (Model == null)
{
    <a class="btn btn-outline-info btnLike" data-id="@ViewBag.IdeaId">Like</a>
    <a class="btn btn-outline-danger btnDislike" data-id="@ViewBag.IdeaId">Dislike</a>
}
else
{
    @switch (Model.React)
    {
        case -1:
            <a class="btn btn-outline-info btnLike" data-id="@ViewBag.IdeaId">Like</a>
            <a class="btn btn-danger btnDislike" data-id="@ViewBag.IdeaId">Dislike</a>
            break;
        case 1:
            <a class="btn btn-info btnLike" data-id="@ViewBag.IdeaId">Like</a>
            <a class="btn btn-outline-danger btnDislike" data-id="@ViewBag.IdeaId">Dislike</a>
            break;
        default:
            <a class="btn btn-outline-info btnLike" data-id="@ViewBag.IdeaId">Like</a>
            <a class="btn btn-outline-danger btnDislike" data-id="@ViewBag.IdeaId">Dislike</a>
            break;
    }
}